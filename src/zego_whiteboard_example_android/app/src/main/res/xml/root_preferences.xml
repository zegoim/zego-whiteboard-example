<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="设置环境">

        <SwitchPreferenceCompat
            app:key="video_env"
            app:summaryOff="正式环境"
            app:summaryOn="测试环境"
            app:title="@string/live_room_title" />

        <SwitchPreferenceCompat
            app:key="docs_view_env"
            app:summaryOff="正式环境"
            app:summaryOn="测试环境"
            app:title="@string/docs_view_title" />

        <SwitchPreferenceCompat
            app:key="next_step_flip_page"
            app:summaryOff="关闭"
            app:summaryOn="开启"
            app:title="点击触发翻页" />

        <SwitchPreferenceCompat
            app:key="text_style"
            app:summaryOff="思源黑体"
            app:summaryOn="系统字体"
            app:title="字体类型"/>

    </PreferenceCategory>

</PreferenceScreen>